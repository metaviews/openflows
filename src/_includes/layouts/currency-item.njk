---
layout: layouts/base.njk
---
<h2>{{ title }}</h2>
<p class="muted">Type: {{ currencyType }}</p>
{{ content | safe }}

{% if links and links.length %}
<section class="connection-note">
  <h3>Connections</h3>
  <ul class="connection-list">
    {% for link in links %}
    {% set target = collections.currency | currencyById(link.id) %}
    {% if target %}
    <li>
      <a href="{{ target.url }}">{{ target.data.title }}</a>
      {% if link.relation %}<span class="muted"> - {{ link.relation }}</span>{% endif %}
      <span class="muted">({{ target.data.currencyType }})</span>
    </li>
    {% else %}
    <li><span class="muted">Missing connection: {{ link.id }}</span></li>
    {% endif %}
    {% endfor %}
  </ul>
</section>
{% endif %}

{% if mediation %}
<section class="mediation-note">
  <h3>Mediation note</h3>
  <p><strong>Tooling:</strong> {{ mediation.tooling }}</p>
  {% if mediation.use and mediation.use.length %}
  <p><strong>Use:</strong> {{ mediation.use | join(", ") }}</p>
  {% endif %}
  <p><strong>Human role:</strong> {{ mediation.humanRole }}</p>
  <p><strong>Limits:</strong> {{ mediation.limits }}</p>
</section>
{% endif %}
